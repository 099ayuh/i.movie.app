<script>
    const button = document.querySelector('#navbtn');
    const menu = document.querySelector('#navbar-search');


    button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
    });


    function changeFocus() {
        var path = document.location.pathname;
        console.log(path)
        var anchorTag = document.querySelectorAll('.changefocus');
        if (path === '/' || path.startsWith('/page')) {
            anchorTag[0].classList.add('text-blue-600')
            anchorTag[1].style.color = 'white'
            anchorTag[2].style.color = 'white'
            anchorTag[3].style.color = 'white'
        } else if (path === '/genre' || path.startsWith('/genre')) {
            anchorTag[1].classList.add('text-blue-600')
            anchorTag[0].style.color = 'white'
            anchorTag[2].style.color = 'white'
            anchorTag[3].style.color = 'white'
        } else if (path === '/tvSeries' || path.startsWith('/tvSeries')) {
            anchorTag[2].classList.add('text-blue-600')
            anchorTag[0].style.color = 'white'
            anchorTag[1].style.color = 'white'
            anchorTag[3].style.color = 'white'
        } else if (path === '/bollywood' || path.startsWith('/bollywood')) {
            anchorTag[0].style.color = 'white'
            anchorTag[3].classList.add('text-blue-600')
            anchorTag[2].style.color = 'white'
            anchorTag[1].style.color = 'white'
        }
    }
    window.onload = changeFocus();
</script>
